# dmenu
super + p
    dmenu_run -m 0 -i -c -l 10
super + shift + p
    dmenu_run -m 0 -i

# volume
XF86AudioMute
    amixer set Master toggle
XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume $(pactl get-default-sink) {+,-}2%
F1
    amixer set Master toggle
F{3,2}
    pactl set-sink-volume $(pactl get-default-sink) {+,-}2%

# power
# change #HandlePowerKey=poweroff to HandlePowerKey=ignore in /etc/elogind/login.conf (/etc/logind/login.conf for systemd)
XF86PowerOff
    powerbutton.sh

# brightness
XF86MonBrightness{Up,Down}
    light -{A,U} 10

# scripts
super + s; {Return, c, s}
    dmenu-{\
    scripts,\
    capslock-remap,\
    sink\
    }.sh

# apps
super + o ; {f,q}
    {firefox,qbittorrent}