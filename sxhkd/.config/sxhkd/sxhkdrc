# dmenu
super + p
    dmenu_run -m 0 -i -c -l 10
super + shift + p
    dmenu_run -m 0 -i

# volume
XF86AudioMute
    chvol togglemute
XF86Audio{Raise,Lower}Volume
    chvol {up,down}
F1
    chvol togglemute
F{3,2}
    chvol {up,down}

# power
# change #HandlePowerKey=poweroff to HandlePowerKey=ignore in /etc/elogind/login.conf (/etc/logind/login.conf for systemd)
XF86PowerOff
    powermenu

# brightness
XF86MonBrightness{Up,Down}
    light -{A,U} 10

# dunst
super + grave
    dunstctl history-pop
super + x
    dunstctl close-all

# scripts
super + s
    dmenuscripts
super + c
    chcol
super + m; {1,2,3}
    chmon {0,1,2}

# apps
super + o ; {f,q}
    {firefox,qbittorrent}
