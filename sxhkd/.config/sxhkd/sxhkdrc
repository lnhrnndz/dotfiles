# dmenu
super + p
    dmenu_run -m 0 -l 8 -bw 4

# volume
XF86AudioMute
    volume togglemute
XF86Audio{Raise,Lower}Volume
    volume {up,down} 5
shift + XF86Audio{Raise,Lower}Volume
    volume {up,down} 2
F1
    volume togglemute
F{3,2}
    volume {up,down} 5

# power
# change #HandlePowerKey=poweroff to HandlePowerKey=ignore in /etc/elogind/login.conf (/etc/logind/login.conf for systemd)
XF86PowerOff
    powermenu

# brightness
XF86MonBrightness{Up,Down}
    light -{A,U} 10

# scrot
super + shift + s
    scrot -s "$HOME/Pictures/Screenshots/%Y-%m-%d_%H%M%S.png"
alt + shift + s
    scrot "$HOME/Pictures/Screenshots/%Y-%m-%d_%H%M%S.png"

# dunst
super + grave
    dunstctl history-pop
super + x
    dunstctl close-all

# scripts
super + s
    dmenuscripts
super + c
    colorscheme
super + space; {u,c}
    keyboard {us,ch}

# apps
super + o ; {f,q}
    {firefox,qbittorrent}
