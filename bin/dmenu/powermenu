#!/bin/sh

#alias lock="i3lock -e -c 282A36"
alias lock="slock"

options="\
lock
suspend
lock then suspend
hibernate
hybrid sleep
suspend then hibernate
shut down
reboot
cancel"

choice=$(echo "$options" | dmenu -p "what do?")

case "$choice" in
  lock)
    lock ;;
  suspend)
    systemctl suspend ;;
  lock\ then\ suspend)
    systemctl suspend
    lock
    ;;
  hibernate)
    systemctl hibernate ;;
  hybrid\ sleep)
    systemctl hybrid-sleep ;;
  suspend\ then\ hibernate)
    systemctl suspend-then-hybernate ;;
  shut\ down)
    systemctl poweroff ;;
  reboot)
    systemctl reboot ;;
  cancel)
    exit 1 ;;
esac
