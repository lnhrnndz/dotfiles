super + Escape
    pkill -USR1 -x sxhkd

super + shift + q
    prompt "Quit dwm?" "pkill -9 dwm"

# ============
# APPLICATIONS
# ============

# terminal
super + shift + Return
    st

# launcher
super + p
    dmenu_run
super + shift + p
    rofi -show run -sort
super + control + p
    rofi -show ssh -sort
alt + Tab
    rofi -show window -sort

# screenshot
super + shift + s
    shot --select
super + s; a
    shot --all
super + s; s
    shot --select
super + s; f
    shot --focused
super + s; d
    shot --dmenu --rename

# notifications
super + grave
    dunstctl history-pop
super + x
    dunstctl close-all

super + shift + l
    slock

# ======
# SYSTEM
# ======

# change #HandlePowerKey=poweroff to HandlePowerKey=ignore in /etc/elogind/login.conf (/etc/systemd/login.conf for systemd, then run sudo systemctl restart systemd-logind.service)
XF86PowerOff
    powermenu

# volume
XF86AudioMute
    volume togglemute
XF86Audio{Raise,Lower}Volume
    volume {up,down} 5
shift + XF86Audio{Raise,Lower}Volume
    volume {up,down} 2

# brightness
XF86MonBrightness{Up,Down}
    light -{A,U} 10

# keyboard
super + space
    keyboard -n
super + Delete
    keyboard -r

# ====
# MISC
# ====

super + n; {n,d,m,y,o,Return}
    zet {new, daily, monthly, yearly, overview, startup}
