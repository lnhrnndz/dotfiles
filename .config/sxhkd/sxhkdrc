super + Escape
    pkill -USR1 -x sxhkd

super + Delete
    keyboard -r

super + shift + q
    prompt "Quit dwm?" "pkill -9 dwm"

# ============
# APPLICATIONS
# ============

super + shift + Return
    st

super + p
    dmenu_run
super + shift + p
    rofi -show run -sort
super + control + p
    rofi -show ssh -sort
alt + Tab
    rofi -show window -sort

# scrot
super + shift + s
    screenshot -s
super + s
    screenshot -f
alt + shift + s
    screenshot -a

# dunst
super + grave
    dunstctl history-pop
super + x
    dunstctl close-all

super + shift + l
    slock

# ======
# SYSTEM
# ======

# change #HandlePowerKey=poweroff to HandlePowerKey=ignore in /etc/elogind/login.conf (/etc/systemd/login.conf for systemd, then run sudo systemctl restart systemd-logind.service)
XF86PowerOff
    powermenu

# volume
XF86AudioMute
    volume togglemute
XF86Audio{Raise,Lower}Volume
    volume {up,down} 5
shift + XF86Audio{Raise,Lower}Volume
    volume {up,down} 2

# brightness
XF86MonBrightness{Up,Down}
    light -{A,U} 10

super + space
    keyboard -n

# ====
# MISC
# ====

super + n; {n,d,m,y,o,Return}
    zet {new, daily, monthly, yearly, overview, startup}
