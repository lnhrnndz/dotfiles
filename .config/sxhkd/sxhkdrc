# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# quit dwm
super + shift + q
    pkill -9 dwm

# ============
# APPLICATIONS
# ============

super + shift + Return
    alacritty

super + p
    rofi -show drun -sort
super + shift + p
    rofi -show run -sort
super + control + p
    rofi -show ssh -sort
alt + Tab
    rofi -show window -sort

# scrot
super + shift + s
    scrot -s "$HOME/Pictures/Screenshots/%Y-%m-%d_%H%M%S.png"
alt + shift + s
    scrot "$HOME/Pictures/Screenshots/%Y-%m-%d_%H%M%S.png"

# dunst
super + grave
    dunstctl history-pop
super + x
    dunstctl close-all

# ======
# SYSTEM
# ======

# change #HandlePowerKey=poweroff to HandlePowerKey=ignore in /etc/elogind/login.conf (/etc/logind/login.conf for systemd)
XF86PowerOff
    powermenu

# volume
XF86AudioMute
    volume togglemute
XF86Audio{Raise,Lower}Volume
    volume {up,down} 5
shift + XF86Audio{Raise,Lower}Volume
    volume {up,down} 2
F1
    volume togglemute
F{3,2}
    volume {up,down} 5

# brightness
XF86MonBrightness{Up,Down}
    light -{A,U} 10
