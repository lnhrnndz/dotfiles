super + Escape
    pkill -USR1 -x sxhkd

super + shift + q
    prompt "Quit dwm?" "pkill -9 dwm"

# ============
# APPLICATIONS
# ============

# terminal
super + shift + Return
    alacritty

# launcher
super + p
    dmenu_run
super + shift + p
    rofi -show run -sort
super + control + p
    rofi -show ssh -sort
alt + Tab
    rofi -show window -sort

# screenshot
super + shift + s
    shot --select
super + s; a
    shot --all
super + s; s
    shot --select --rename
super + s; f
    shot --focused
super + s; d
    shot --dmenu --rename

# notifications
super + grave
    dunstctl history-pop
super + x
    dunstctl close-all

super + shift + l
    slock

# ======
# SYSTEM
# ======

# change #HandlePowerKey=poweroff to HandlePowerKey=ignore in /etc/elogind/login.conf (/etc/systemd/login.conf for systemd, then run sudo systemctl restart systemd-logind.service)
XF86PowerOff
    powermenu
XF86Tools
    systemctl suspend
super + XF86Tools
    systemctl suspend; slock

# volume
F8
    volume --mute
F{9,10}
    volume {--down,--up} 5
shift + F{9,10}
    volume {--down,--up} 2

# brightness
F{6,7}
    light -{U,A} 10

# keyboard
super + space
    keyboard -n
super + Delete
    keyboard -r

# ====
# MISC
# ====

super + n; {n,d,m,y,o,Return}
    zet {new, daily, monthly, yearly, overview, startup}




F4
    reloaddisplay
shift + F4
    reloaddisplay --sleep

super + z
    notify-send -r 222 -u low "$(status.sh)"
