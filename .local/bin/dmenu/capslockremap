#!/bin/sh

options="\
Control
Capslock
Super
Escape
Swap Escape
Backspace
nocaps
None"

n="$(echo "$options" | wc -w)"

choice=$(echo "$options" | dmenu -m 0 -l "$n" -bw 4 -p "set capslock remap ")
[ -z "$choice" ] && exit 1
setxkbmap -option

case "$choice" in 
    "Capslock")
        remap="capslock" ;;
    "Control")
        remap="ctrl_modifier" ;;
    "Super")
        remap="super" ;;
    "Escape")
        remap="escape" ;;
    "Swap Escape")
        remap="swapescape" ;;
    "None")
        remap="none" ;;
esac

setxkbmap -option caps:$remap
