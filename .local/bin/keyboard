#!/bin/sh

LAYOUTS="\
us
ch"

help () {
    echo "USAGE: keyboard [OPTIONS]

OPTIONS:
 -h             display this menu
 -r             reload default options
 -s LAYOUT      set keyboard layout to LAYOUT
 -n             set keyboard to next layout available
 -d             select a layout with dmenu"
}

notify () {
  dunstify -a keyboard -u low -r 666 "keyboard layout set to $1"
}

reload_kb () {
  setxkbmap -option caps:ctrl_modifier
  xset r rate 200 36
}

set_layout () {
  CHOICE="$1"
  if ! echo "$LAYOUTS" | grep -q "$CHOICE"; then
    echo "invalid option"
    return
  fi
  setxkbmap "$CHOICE"
  notify "$CHOICE"
}

next_lauout () {
  n=$(echo "$LAYOUTS" | wc -l)
  CURRENT=$(setxkbmap -query | awk '/layout/{print $2}')
  CURRENTNR=$(echo "$LAYOUTS" | awk "/$CURRENT/ { print NR }")
  NEXTNR=$(( (CURRENTNR) % n + 1 ))
  CHOICE=$(echo "$LAYOUTS" | sed -n "${NEXTNR}p")
  setxkbmap "$CHOICE"
  notify "$CHOICE"
}

dmenu_sel () {
  CHOICE=$(echo "$LAYOUTS" | dmenu -p "select layout")
  [ -z "$CHOICE" ] && return
  setxkbmap "$CHOICE"
  notify "$CHOICE"
}

while getopts ":hrs:nd" opt; do
  case $opt in
    h) help ;;
    r) reload_kb ;;
    s) set_layout "$OPTARG" ;;
    n) next_lauout ;;
    d) dmenu_sel ;;
    \?) echo "Invalid option -$OPTARG"; exit ;;
    :) echo "Option -$OPTARG needs an argument"; exit ;;
  esac
done
